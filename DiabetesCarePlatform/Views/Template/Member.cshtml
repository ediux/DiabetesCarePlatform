<!--新增-->
<div class="modal fade" id="addUser" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="width:50%;">

        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" onclick="formclear()" aria-hidden="true">
                    ×
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    新增紀錄
                </h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group col-lg-6">
                                <label class="col-sm-2 control-label">
                                    編號
                                </label>
                                <div class="col-sm-4">
                                    <input type="text" class="form-control" value="-" readonly />
                                </div>
                            </div>
                        </div>
                    </div>     
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group col-lg-6">
                                <label class="col-sm-2 control-label">
                                    姓名
                                </label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="addName" name="Name" required />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group col-lg-6">
                                <label class="col-sm-2 control-label">
                                    性別
                                </label>
                                <div class="col-sm-3">
                                    <label>
                                        <input type="radio" name="Status" value="10" id="addGender10" />
                                        男性
                                    </label>
                                </div>
                                <div class="col-sm-3">
                                    <label>
                                        <input type="radio" name="Status" value="20" id="addGender20" />
                                        女性
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group col-lg-6">
                                <label class="col-sm-2 control-label">
                                    會員類型
                                </label>
                                <div class="col-sm-3">
                                    <label>
                                        <input type="radio" name="Status" value="10" id="Status10" />
                                        自費
                                    </label>
                                </div>
                                <div class="col-sm-3">
                                    <label>
                                        <input type="radio" name="Status" value="20" id="editStatus20" />
                                        非自費
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group col-lg-6">
                                <label class="col-sm-2 control-label">
                                    描述
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="Descn" id="edit" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group col-lg-6">
                                <label class="col-sm-2 control-label">
                                    備註
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="addDescription" name="Description" />

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">
                        確認
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>
